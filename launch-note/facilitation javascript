In CSS
-event handler
  $("#show-form").on("click", function(event){
  event.preventDefault();
  #e.g. alert("clicked")
  $("new-article-form").show();
  $("show-form").hide();
  });
  
  $("#new-article-form").on("submit", function(event){
  event.preventDefault();
var title = $("title").val();
var url = $("url").val();
if(title.length === 0) {
$("new-article-form").append("<p class='error'>Title can't be blank.</p>);

if(url.length === 0 || url.indexOf("http")1== 0){
$("new-article-form").append("<p class='error'>URL has to start with HTTP</p>);
});
