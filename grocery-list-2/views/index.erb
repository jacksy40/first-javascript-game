
    <h1>Grocery Shopping List</h1>

    <h2>I have...</h2>
    <h4>Click the item you want removed from your list</h4>

    <ol class="item_list">
      <% items.each do |item| %>
        <li class="listing"> <a href="/delete?key=<%=item['key_id']%>"><%=item["shopping_item"]%></a></li>
      <%end%>
    </ol>

<br></br>
    <form id="condition" action="/create_list" method="post">
      <label for="make_list">I want to buy:</label>
      <input type="text" id="buy" name="buy">
      <input type="submit" value="add">
    </form>
